<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:text="09:14 Monday, 02 July 2018"/>

        <TextView
            android:id="@+id/txtText"
            app:layout_constraintTop_toBottomOf="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maaf Kak, atas ketidaknyamanan-nya, perihal kendala-nya sudah di bantu follow up oleh rekan kami dan sudah dalam prioritas kami, berkenan menunggu progresnya..Trims -Aslam"/>

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txtPredicted"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtText"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bidang Politik,Hukum dan Keamanan"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>